<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity"


    >

    <ScrollView
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        >

        <RelativeLayout

            android:id="@+id/r1"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"


                >


                <VideoView
                    android:id="@+id/rdvideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"


                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l1"
                android:background="#BD3109"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingTop="30dp">

                <TextView

                    android:textSize="50dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Infect with \nbibliophilia.\n"

                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/content"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textSize="20dp"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="-20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Built on everything we learnt\nfrom the journeys of several\nbook lovers, ReadersDoor is a\nfresh start to help spread the\nlove of books.\nRead on to know more"

                    android:textColor="#ffffff"

                    />

                <ImageView
                    android:id="@+id/imageViewrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:src="@drawable/rdintro" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l2"
                android:background="#E6580B"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingTop="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/l31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title2"
                        style="@style/Base.TextAppearance.AppCompat.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"

                        android:text="Discover yourself \nthrough books, \nfriends\nand the world."
                        android:textColor="#fff"

                        />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"

                        android:src="@drawable/dsc" />
                </LinearLayout>

                   <LinearLayout
                       android:layout_marginTop="141dp"


                       android:orientation="vertical"

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="#fff"
                       >

                        <View
                            android:id="@+id/discoverview"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/background_dark" />

                        <TextView
                            android:id="@+id/subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Filters"


                            />

                        <TextView
                            android:id="@+id/subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"

                            android:text="Suggestion"


                            />

                        <TextView
                            android:id="@+id/subtitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="-30dp"
                            android:autoText="false"
                            android:text="@string/con2" />

                        <TextView
                            android:id="@+id/main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="-30dp"
                            android:autoText="false"
                            android:text="@string/con3" />





                </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l3"

                android:background="#BA68C8"
                android:paddingEnd="20dp"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/title3"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Get connected \nWith like mind souls
"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-140dp"
                    android:src="@drawable/connect" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</LinearLayout>